                      <input name="Cals" type="number" id="K" value="">
                    </div>
                    <div class="row">
                      <button type="submit" value="Submit" id="AddButton">
                        Add Meal to table
                      </button>
                      <button type="button" id="ClearButton" onclick="location.href='/calculator/deleteLunch';">
                        Clear
                      </button>
                    </div>
                  </form>
                  {{ /Lunch }}
                </div>
              </div>
            </div>
            <div class="d-flex col-4 justify-content-center">
              <div class="d-flex row justify-content-center">
                <div class="row mb-1">
                  <div class="d-flex col-12 justify-content-center">
                    <h4>Dinner</h4>
                  </div>
                </div>
                <div class="row">
                  <div class="table-responsive">
                    <table class="table" id="Meal">
                      <thead>
                        <tr>
                          <th id="Mealname" class="col justify-content-center" style="width:40%">Meal</th>
                          <th class="col">Protein</th>
                          <th class="col">Fat</th>
                          <th class="col">Carbs</th>
                          <th class="col">Cal</th>
                          <th class="col"></th>
                          <th class="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        {{ #dinnerFood }}
                          <tr>
                            <td>{{Name}}</td>
                            <td>{{Protein}}</td>
                            <td>{{Fat}}</td>
                            <td>{{Carbs}}</td>
                            <td>{{Cals}}</td>
                            <td><a href="/calculator/saveDinnerInfo/{{rowid}}">S</a></td>
                            <td><a href="/calculator/deleteDinnerInfo/{{rowid}}">D</a></td>
                          </tr>
                        {{ /dinnerFood }}
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="row">
                  {{ #Dinner }}
                  <form name="Dinner" action="/calculator/addDinner" method="post">
                    <div class="row">
                      <label for="M">Mealname:</label>
                      <input name="Name" type="text" id="M" value="">
                    </div>
                    <div class="row">
                      <label for="P">Protein:</label>
                      <input name="Protein" type="number" id="P" value="">
                    </div>
                    <div class="row">
