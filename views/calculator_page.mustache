                            <td>{{Fat}}</td>
                            <td>{{Carbs}}</td>
                            <td>{{Cals}}</td>
                            <td><a href="/calculator/saveLunchInfo/{{rowid}}">S</a></td>
                            <td><a href="/calculator/deleteLunchInfo/{{rowid}}">D</a></td>
                          </tr>
                        {{ /lunchFood }}
                      </tbody>
                    </table>
                  </div>
                </div>
                <div class="row">
                  {{ #Lunch }}
                  <form name="Lunch" action="/calculator/addLunch" method="post">
                    <div class="row">
                      <label for="M">Mealname:</label>
                      <input name="Name" type="text" id="M" value="">
