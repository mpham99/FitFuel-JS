                      <input name="Carbs" type="number" id="C" value="">
                    </div>
                    <div class="row">
                      <label for="K">Cal:</label>
                      <input name="Cals" type="number" id="K" value="">
                    </div>
                    <div class="row">
                      <button type="submit" value="Submit" id="AddButton">
                        Add Meal to table
                      </button>
                      <button type="button" id="ClearButton" onclick="location.href='/calculator/deleteDinner';">
                        Clear
                      </button>
                    </div>
                  </form>
                  {{ /Dinner }}
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="d-flex justify-content-center">
              <h4>Totals</h4>
            </div>
            <div class="row">
              <div class="table-responsive">
                <table class="table" id="Totals">
                  <thead>
                    <tr>
                      <th class="col">Protein</th>
                      <th class="col">Fat</th>
                      <th class="col">Carbs</th>
                      <th class="col">Cal</th>
                    </tr>
                  </thead>
                    {{!-- Populate these and allow user to input meal (interactive table? Javascript -> DOM?) --}}
                  <tbody>
                    <tr>
                      <td>16</td>
                      <td>8</td>
                      <td>0</td>
                      <td>110</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
